#!/usr/bin/make -f

export DH_VERBOSE = 1

VERSION = 1.0.0
DKMS_SRC = /usr/src/sky1-vpu-$(VERSION)

%:
	dh $@ --with dkms

override_dh_auto_install:
	install -d $(CURDIR)/debian/sky1-vpu-dkms$(DKMS_SRC)
	cp -r src/* $(CURDIR)/debian/sky1-vpu-dkms$(DKMS_SRC)/

override_dh_dkms:
	dh_dkms -V $(VERSION)
